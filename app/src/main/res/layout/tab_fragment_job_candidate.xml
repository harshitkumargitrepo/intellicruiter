<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textViewRecommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top Job Recommendations"
        android:textColor="#d4d4d4"
        android:layout_margin="20dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_recommendations"
        android:layout_below="@id/textViewRecommend"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#cccccc"
        android:fontFamily="sans-serif"
        android:text="Current Openings"
        android:layout_below="@id/recycler_view_recommendations"
        android:textAppearance="?android:attr/textAppearanceLarge"/>




        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_requirements"
            android:layout_below="@id/textView"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



</RelativeLayout>