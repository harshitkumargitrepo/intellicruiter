<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b5c94"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:text="Requirement Title"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:id="@+id/textViewRequirementTitle"
        android:textColor="#e1e1e1"
        android:fontFamily="sans-serif"
        android:paddingLeft="45dp"
        android:ems="5"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Requirement Description"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:id="@+id/textViewRequirementDesc"
        android:fontFamily="sans-serif-thin"
        android:ems="5"
        android:textColor="#e1e1e1"
        android:textSize="14sp"
        android:paddingLeft="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Number of Positions"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:id="@+id/textViewPositions"
        android:fontFamily="sans-serif-thin"
        android:ems="5"
        android:textSize="12sp"
        android:textColor="#e1e1e1"
        android:paddingLeft="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>