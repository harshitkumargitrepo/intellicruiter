<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1b5c94"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="400dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1b5c94"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mImageCompany"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/sap"
                app:civ_border_width="2dp"
                app:civ_border_color="#c2ffffff"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mImage"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/mImageCompany"
                android:src="@drawable/men"
                app:civ_border_width="2dp"
                app:civ_border_color="#c2ffffff"/>

            <TextView
                android:id="@+id/mCandidateName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/mImage"
                android:fontFamily="sans-serif"
                android:ems="10"
                android:textColor="#FFFFFF"
                android:text="Candidate Name"
                android:textAllCaps="true"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                />

            <TextView
                android:id="@+id/mJobTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mCandidateName"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/mImage"
                android:fontFamily="sans-serif-thin"
                android:textColor="#FFFFFF"
                android:ems="10"
                android:text="Job Title"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


            <TextView
                android:id="@+id/mClientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mJobTitle"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/mImage"
                android:text="SAP"
                android:textColor="#FFFFFF"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:background="#FFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Candidate Skills"
                android:textSize="18sp"
                android:fontFamily="sans-serif-bold"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="16sp"
                android:id="@+id/candidateSkills"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Requirement Skills"
                android:textSize="18sp"
                android:fontFamily="sans-serif-bold"
                android:textColor="#000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="16dp"
                android:id="@+id/requirementSkills"/>

        </LinearLayout>

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonAcceptCandidate"
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="#cecece"
            android:textColor="#1b5c94"
            android:text="ACCEPT" />

        <Button
            android:id="@+id/buttonRejectCandidate"
            android:layout_width="10dp"
            android:layout_height="25dp"
            android:background="#cecece"
            android:textColor="#1b5c94"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="REJECT" />

    </LinearLayout>


</LinearLayout>