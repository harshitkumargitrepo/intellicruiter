<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:backgroundTint="#1acccccc"
    android:paddingBottom="5dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="5dp"
    android:layout_height="90dp"
    android:layout_margin="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1b5c94"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mImageCompany"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/sap"
            app:civ_border_width="2dp"
            app:civ_border_color="#c2ffffff"/>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/mImage"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/mImageCompany"
            android:src="@drawable/men"
            app:civ_border_width="2dp"
            app:civ_border_color="#c2ffffff"/>

        <TextView
            android:id="@+id/mCandidateName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/mImage"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:textColor="#FFFFFF"
            android:text="Candidate Name"
            android:textAllCaps="true"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/mJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mCandidateName"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/mImage"
            android:fontFamily="sans-serif-thin"
            android:textColor="#FFFFFF"
            android:ems="10"
            android:text="Job Title"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


        <TextView
            android:id="@+id/mClientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mJobTitle"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/mImage"
            android:text="SAP"
            android:textColor="#FFFFFF"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/mCandidateName"
            android:layout_marginLeft="180dp"
            android:id="@+id/mProcessApplicationbtn"
            android:background="#cecece"
            android:textColor="#1b5c94"
            android:layout_toRightOf="@id/mImage"
            android:text="Process"
            android:textSize="12sp"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>